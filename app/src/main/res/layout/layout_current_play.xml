<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:layout_width="match_parent"
                                                   android:background="@drawable/card_bg_current_play"
                                                   android:layout_height="60dp">

    <ImageView
            android:id="@+id/imageView"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            android:src="@drawable/ic_no_cover"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"/>

    <TextView
            android:id="@+id/textView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text=""
            android:textColor="@color/white"
            android:maxLines="1"
            app:layout_constraintStart_toEndOf="@+id/imageView"
            app:layout_constraintTop_toTopOf="@+id/imageView" app:layout_constraintEnd_toStartOf="@+id/imageButton"/>

    <TextView
            android:id="@+id/textView2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text=""
            android:maxLines="1"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="@+id/imageView"
            app:layout_constraintStart_toEndOf="@+id/imageView" app:layout_constraintEnd_toStartOf="@+id/imageButton"/>

    <ImageButton
        android:id="@+id/button"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:layout_marginEnd="8dp"
        android:background="@null"
        android:contentDescription="play or pause"
        android:src="@drawable/ic_baseline_play_arrow_white_24"
        app:contentDescription="play or pause"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView" />

    <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:background="@null"
            android:visibility="visible"
            android:src="@drawable/ic_baseline_text_fields_24"
            android:contentDescription="lrc_display"
            app:layout_constraintEnd_toStartOf="@+id/button" app:layout_constraintTop_toTopOf="@+id/button"
            app:layout_constraintBottom_toBottomOf="@+id/button"/>
</androidx.constraintlayout.widget.ConstraintLayout>